<!DOCTYPE html>
<html>
<head>
  <title>Pets</title>
  <%= stylesheet_link_tag  "depot",  "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application" %>
  <%= stylesheet_link_tag "scaffold" %>
  <%= csrf_meta_tags %>
</head>
<body id="foster">
	<div id="banner">
		<%= image_tag("/img/logo.png", :class => "logo") %>
		<%= @page_title || "POKEMON" %>
	</div>
	<div id = "columns">
		<div id="side">
			<%= hidden_div_if(@cart.line_items.empty?, :id => "cart") do %>
				<%= render @cart %>
			<% end %>
			<a href="/">Home</a>
			<a href="/pets">pet database</a>
		</div>
		<div id="main">
			<%= yield %>
		</div>
	</div>

</body>
</html>
