<table id='bookTable'>
	<tr id='headers'>
		<td>Title</td>
		<td>Author</td>
		<td>Langauge</td>
		<td>Publish Date</td>
		<td>Copies Sold</td>
		<td>Rank</td>
	</tr>
	<% param = @search %> 
	<% @books.sort! { |x, y| eval("x.#{param}") <=> eval("y.#{param}") } %>
	<% for @book in @books %>
		<tr>
			<td><%= @book.title %></td>
			<td><%= @book.author %></td>
			<td><%= @book.language %></td>
			<td><%= @book.date %></td>
			<td><%= @book.copies %></td>
			<td><%= @book.rank %></td>
		</tr>
	<% end %>
</table>
